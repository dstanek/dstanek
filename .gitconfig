[user]
	name = David Stanek
	email = dstanek@dstanek.com
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore_global
[alias]
	l = log --oneline --decorate
	s = status -sb
	co = checkout
	ci = commit
	st = status
	df = diff
	br = branch
	type = cat-file -t
	dump = cat-file -p
	unstage = reset HEAD
	r = ribbon
	hist = log --graph --all --format=format:'%C(blue)%h%C(reset) - %C(green)(%ar)%C(reset) %C(white)%s%C(reset) %C(cyan)â€” %an%C(reset)%C(yellow)%d%C(reset)' --abbrev-commit --date=relative --decorate
	amend = commit --amend
	fp = format-patch --stdout
	last = show -s --pretty='format:%h (%s)'
	visual = ! gitk
	undo = reset --soft HEAD^
	count = shortlog -sn --no-merges
	ctags = !.git/hooks/ctags
	lol = blame --show-stats
	wtf = blame --show-stats
	summary = log --abbrev-commit --pretty=oneline --since '7 days ago' --author dstanek --reverse
[branch]
	autosetupmerge = always
	autosetuprebase = always
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[push]
	default = tracking
[pull]
	rebase = true
[diff]
	mnemonicprefix = true
	rename = copies
[interactive]
	singlekey = true
[advice]
	statusHints = false
[rebase]
	autosquash = true
[rerere]
	enabled = true
	hist = less
[init]
	templatedir = ~/.git_template
[help]
	autocorrect = 50
[include]
	path = .gitconfig.local
